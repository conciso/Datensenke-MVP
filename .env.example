# LightRAG API
DATENSENKE_LIGHTRAG_URL=http://lightrag:9621
DATENSENKE_LIGHTRAG_API_KEY=your-secure-api-key-here

# Polling-Intervall in Millisekunden
DATENSENKE_POLL_INTERVAL_MS=60000

# Remote-Verbindung (sftp, ftp oder local)
DATENSENKE_REMOTE_PROTOCOL=sftp
DATENSENKE_REMOTE_HOST=your-server.example.com
DATENSENKE_REMOTE_PORT=22
DATENSENKE_REMOTE_USERNAME=your-username
DATENSENKE_REMOTE_PASSWORD=your-password
DATENSENKE_REMOTE_PRIVATE_KEY=
DATENSENKE_REMOTE_DIRECTORY=/documents

# Startup-Sync: none, upload, full
DATENSENKE_STARTUP_SYNC=none

# Failure-Log Pfad (append-only)
DATENSENKE_FAILURE_LOG_PATH=logs/datensenke-failures.log

# Max. Größe des Failure-Logs in KB bevor rotiert wird (Default: 1024 = 1 MB)
DATENSENKE_FAILURE_LOG_MAX_SIZE_KB=1024

# State-Datei Pfad (persistiert Upload-Status zwischen Neustarts)
DATENSENKE_STATE_FILE_PATH=data/datensenke-state.json

# Fehlgeschlagene Dokumente nach dem Loggen aus LightRAG löschen (Default: false)
DATENSENKE_CLEANUP_FAILED_DOCS=false

# Preprocessor (optional): Datei vor dem Upload an LightRAG vorverarbeiten
DATENSENKE_PREPROCESSOR_ENABLED=false
# DATENSENKE_PREPROCESSOR_COMMAND=python3 /opt/datensenke/preprocess.py
# DATENSENKE_PREPROCESSOR_TIMEOUT_SECONDS=120

# Erlaubte Dateiendungen (komma-getrennt)
DATENSENKE_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt
